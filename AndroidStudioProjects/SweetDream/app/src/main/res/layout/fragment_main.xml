<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lay_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context="com.example.sweetdream.MainFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dip"
        android:layout_marginTop="46dip"
        android:src="@drawable/moon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dip"
        android:layout_marginTop="46dip"
        android:src="@drawable/sun"
        app:layout_constraintEnd_toStartOf="@+id/wakeupTime"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sleepTime"
        android:layout_width="86dip"
        android:layout_height="29dip"
        android:layout_marginStart="20dip"
        android:layout_marginTop="46dip"
        android:text="12:00"
        android:textColor="#666666"
        android:textSize="20dip"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/wakeupTime"
        android:layout_width="86dip"
        android:layout_height="29dip"
        android:layout_marginEnd="35dip"
        android:layout_marginTop="46dip"
        android:text="8:00"
        android:textColor="#666666"
        android:textSize="20dip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/signal"
        android:layout_width="377dp"
        android:layout_height="54dip"
        android:layout_marginEnd="8dip"
        android:layout_marginStart="8dip"
        android:layout_marginTop="48dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="距离开始建造房屋还有2小时16分钟"
        android:textColor="#666666"
        android:textSize="20dip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sleep" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="157dp"
        android:layout_height="153dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="8dip"
        android:layout_marginStart="8dip"
        android:layout_marginTop="40dp"
        android:src="@drawable/clock"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <Button
        android:id="@+id/sleep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dip"
        android:layout_marginStart="8dip"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_btn_green"
        android:text="睡 觉"
        android:textSize="17dip"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />


    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="match_parent"
        android:layout_height="343dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="-1dp"
        android:src="@drawable/house"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp" />



</android.support.constraint.ConstraintLayout>
