<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context="com.example.sweetdream.SettingFragment">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:id="@+id/accont_title"
        android:layout_width="51dip"
        android:layout_height="28dip"
        android:layout_marginStart="16dip"
        android:layout_marginTop="16dip"
        android:text="账户"
        android:textColor="@color/font_light_gray"
        android:textSize="18dip"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/account"
        android:layout_width="332dip"
        android:layout_height="24dip"
        android:layout_marginStart="16dip"
        android:layout_marginTop="12dip"
        android:textColor="@color/font_deep_gray"
        android:textSize="16dip"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accont_title" />

    <TextView
        android:id="@+id/line1"
        android:layout_width="fill_parent"
        android:layout_height="0.8dip"
        android:layout_marginTop="8dip"
        android:background="#CCCCCC"
        app:layout_constraintTop_toBottomOf="@+id/account"
        tools:layout_editor_absoluteX="0dip" />

    <ListView
        android:id="@+id/listView_setting"
        android:layout_width="0dip"
        android:layout_height="125dip"
        android:layout_marginTop="8dip"
        android:divider="#CCCCCC"
        android:dividerHeight="0.8dip"
        android:textColor="@color/font_deep_gray"
        android:textSize="16dip"
        app:layout_constraintTop_toBottomOf="@+id/setting_title"
        tools:layout_editor_absoluteX="0dip" />

    <TextView
        android:id="@+id/about_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dip"
        android:text="关于"
        android:textColor="@color/font_light_gray"
        android:textSize="18dip"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listView_setting" />

    <ListView
        android:id="@+id/listView_about"
        android:layout_width="0dip"
        android:layout_height="128dip"
        android:layout_marginBottom="8dip"
        android:layout_marginTop="4dip"
        android:divider="#CCCCCC"
        android:dividerHeight="0.8dip"
        android:textColor="@color/font_deep_gray"
        android:textSize="16dip"
        app:layout_constraintBottom_toTopOf="@+id/roundButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/about_title"
        app:layout_constraintVertical_bias="0.056" />

    <TextView
        android:id="@+id/setting_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dip"
        android:layout_marginTop="20dip"
        android:text="设置"
        android:textColor="@color/font_light_gray"
        android:textSize="18dip"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line1" />

    <TextView
        android:id="@+id/sleep"
        android:layout_width="81dip"
        android:layout_height="38dip"
        android:layout_marginEnd="36dip"
        android:layout_marginTop="16dip"
        android:text="00:00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/listView_setting" />

    <TextView
        android:id="@+id/wake"
        android:layout_width="81dip"
        android:layout_height="38dip"
        android:layout_marginEnd="36dip"
        android:layout_marginTop="64dip"
        android:text="00:00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/listView_setting" />

    <Button
        android:id="@+id/roundButton"
        android:layout_width="176dip"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dip"
        android:layout_marginStart="8dip"
        android:layout_marginTop="332dip"
        android:background="@drawable/shape_btn_red"
        android:text="退出登录"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setting_title" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="82dp"
        android:layout_height="34dp"
        android:layout_marginEnd="36dp"
        android:layout_marginTop="16dp"
        android:text="v 1.0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/listView_about" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="173dp"
        android:layout_height="29dp"
        android:layout_marginEnd="36dp"
        android:layout_marginTop="60dp"
        android:text="weijiuqi1997@hotmail.com"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/listView_about" />


</android.support.constraint.ConstraintLayout>